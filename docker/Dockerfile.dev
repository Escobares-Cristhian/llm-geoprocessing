FROM python:3.12-slim

# Basic Python/env flags
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# System dependencies for dev:
# - git/curl: convenience tools
# - python3-venv: for virtualenv
# - python3-tk: Tk support (if you use it anywhere)
# - gdal-bin/libgdal-dev: for rasterio/GDAL tools
# - Full X11/GL/audio/glib stack so PyQt5 / QtWebEngine can render the GUI in Docker
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    python3-venv \
    python3-tk \
    gdal-bin \
    libgdal-dev \
    libgl1 \
    libglib2.0-0 \
    libdbus-1-3 \
    libx11-6 \
    libx11-xcb1 \
    libxext6 \
    libxrender1 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libsm6 \
    libice6 \
    libfontconfig1 \
    libfreetype6 \
    libnss3 \
    libxss1 \
    libxtst6 \
    libxrandr2 \
    libxi6 \
    libasound2 \
    libxkbcommon0 \
    libxkbcommon-x11-0 \
    libxcb1 \
    libxcb-glx0 \
    libxcb-icccm4 \
    libxcb-image0 \
    libxcb-keysyms1 \
    libxcb-randr0 \
    libxcb-render0 \
    libxcb-render-util0 \
    libxcb-shape0 \
    libxcb-sync1 \
    libxcb-xfixes0 \
    libxcb-xinerama0 \
    libxcb-xkb1 \
    libxcb-shm0 \
 && ldconfig \
 && rm -rf /var/lib/apt/lists/*

# Install Python deps into a venv (including PyQt5 / PyQtWebEngine via pip)
COPY requirements-dev.txt ./requirements-dev.txt

RUN python -m venv /venv && \
    /venv/bin/pip install --upgrade pip && \
    /venv/bin/pip install -r requirements-dev.txt

# Make venv the default Python and add src to PYTHONPATH
ENV PATH="/venv/bin:${PATH}" \
    PYTHONPATH=/app/src

# EntryPoint: start Voila leafmap app (if notebook exists) then exec passed command
# Notebook is located at /app/src/cli/leafmap_app.ipynb inside the container
RUN printf '#!/usr/bin/env bash\n'\
'set -e\n'\
'NB="/app/src/cli/leafmap_app.ipynb"\n'\
'if [ -f "$NB" ]; then\n'\
'  echo "Starting Voila $NB on port 8866..."\n'\
'  voila "$NB" --port=8866 --no-browser --ip=0.0.0.0 &\n'\
'else\n'\
'  echo "Voila notebook not found at $NB, skipping Voila startup."\n'\
'fi\n'\
'exec "$@"\n' > /entrypoint.sh && chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
CMD ["bash"]
